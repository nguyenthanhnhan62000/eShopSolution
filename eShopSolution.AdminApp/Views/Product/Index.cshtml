
@using eShopsolution.Viewmodels.Comons
@model PageResult<eShopsolution.Viewmodels.Catalog.ProductVm>

@{
    ViewData["Title"] = "Danh sách san pham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model eShopsolution.Viewmodels.Catalog.Products.CategoryAssignRequest

@{
    ViewData["Title"] = "Gán danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Gán quyền</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
        <li class="breadcrumb-item active">Gán danh mục</li>
    </ol>

    <div class="card mb-4">

        <div class="card-header">

            <a class="btn btn-success" asp-action="Index" asp-controller="product"> Về danh sách </a>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="CategoryAssign">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        @for (int i = 0; i < Model.Catagories.Count; i++)
                        {
                            <div class="form-group">
                                <label>
                                    @Model.Catagories[i].Name
                                    <input type="checkbox" asp-for="Catagories[i].Selected" />
                                    <input type="hidden" asp-for="Catagories[i].Id" />
                                    <input type="hidden" asp-for="Catagories[i].Name" />
                                </label>
                            </div>
                        }
                        <div class="form-group">
                            <input type="submit" value="Lưu lại" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

